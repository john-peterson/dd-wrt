	show_layer_ext(document.setup.samba3_pub, 'samba3pub', <% nvram_else_match("samba3_pub", "1", "1", "0"); %> == 1);
	
	update = new StatusbarUpdate();
	update.start();
	
});

addEvent(window, "unload", function() {
	update.stop();

});
		
