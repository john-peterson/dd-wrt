#!/bin/sh

if [ -z "$(nvram get pppoerelay_enable)" ]; then
    nvram set pppoerelay_enable=0
fi
killall -9 pppoe-relay
if [ "$(nvram get pppoerelay_enable)" = "1" ]; then
    if [ "$(nvram get wl_mode)" = "sta" ]; then
	pppoe-relay -S eth1 -C br0
    fi
    if [ "$(nvram get wl_mode)" = "ap" ]; then
	pppoe-relay -S vlan1 -C br0
    fi        
fi
