<fieldset><legend>SMTP Redirect</legend><div class="setting"><div class="label">SMTP Redirect</div><input type="radio" value="1" name="smtp_redirect_enable" <% nvram_match("smtp_redirect_enable","1","checked"); %> /> Enable<input type="radio" value="0" name="smtp_redirect_enable" <% nvram_match("smtp_redirect_enable","0","checked"); %> /> Disable</div><div class="setting"><div class="label">SMTP Destination IP</div><input type="hidden" name="smtp_redirect_destination" value="0.0.0.0" /><input size="3" maxlength="3" class="num" name="smtp_redirect_destination_0" onBlur="valid_range(this,0,255,'SMTP1 IP')" value='<% get_single_ip("smtp_redirect_destination","0"); %>' />.<input size="3" maxlength="3" class="num" name="smtp_redirect_destination_1" onBlur="valid_range(this,0,255,'SMTP1 IP')" value='<% get_single_ip("smtp_redirect_destination","1"); %>' />.<input size="3" maxlength="3" class="num" name="smtp_redirect_destination_2" onBlur="valid_range(this,0,255,'SMTP1 IP')" value='<% get_single_ip("smtp_redirect_destination","2"); %>' />.<input size="3" maxlength="3" class="num" name="smtp_redirect_destination_3" onBlur="valid_range(this,1,254,'SMTP1 IP')" value='<% get_single_ip("smtp_redirect_destination","3"); %>' /></div><div class="setting"><div class="label">SMTP Source Network</div><input type="hidden" name="smtp_source_network" value="0.0.0.0" /><input size="3" maxlength="3" class="num" name="smtp_source_network_0" onBlur="valid_range(this,0,255,'SMTP1 Network')" value='<% get_single_ip("smtp_source_network","0"); %>' />.<input size="3" maxlength="3" class="num" name="smtp_source_network_1" onBlur="valid_range(this,0,255,'SMTP1 Network')" value='<% get_single_ip("smtp_source_network","1"); %>' />.<input size="3" maxlength="3" class="num" name="smtp_source_network_2" onBlur="valid_range(this,0,255,'SMTP1 Network')" value='<% get_single_ip("smtp_source_network","2"); %>' />.<input size="3" maxlength="3" class="num" name="smtp_source_network_3" onBlur="valid_range(this,1,254,'SMTP1 Network')" value='<% get_single_ip("smtp_source_network","3"); %>' /></div></fieldset><br/>