
<fieldset>
	<legend><% tran("hotspot.shat_legend"); %></legend>
	<span class="comment"><% tran("hotspot.shat_srv"); %></span>
		<div class="setting">
			<div class="label"><% tran("hotspot.shat_srv2"); %></div>
			<input class="spaceradio" type="radio" value="1" name="shat_enable" <% nvram_selmatch("shat_enable","1","checked"); %> /><% tran("share.enable"); %>&nbsp;
			<input class="spaceradio" type="radio" value="0" name="shat_enable" <% nvram_selmatch("shat_enable","0","checked"); %> /><% tran("share.disable"); %>
		</div>
		<div class="setting">
			<div class="label"><% tran("share.range"); %></div>
			<input class="text" maxLength="100" size="25" name="shat_range" value="<% nvram_get("shat_range"); %>" />
		</div>
</fieldset><br />
